---
import "../styles/global.css";

import LoadingGallery from "../components/LoadingGallery";
import TitlesDisplay from "../components/TitlesDisplay";
import Slider from "../components/Slider";
import ArrowButton from "../components/ArrowButton";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Ed Sabhin Project Gallery</title>
  </head>
  <body>
    <LoadingGallery />
    <div class="carousel">
      <div class="list">
        <TitlesDisplay />
      </div>
      <div
        class="arrows width-300px max-width-30% flex justify-center gap-6 lg:gap-5
        absolute top-[75%] md:top-[75%] lg:top-[73%] left-[9.7%] lg:right-[30.5%] z-10"
      >
        <ArrowButton id="prev" direction="<" aria-label="Previous Slide" />
        <ArrowButton id="next" direction=">" aria-label="Next Slide" />
      </div>
      <Slider />
      <!-- running border effect -->
      <div class="time"></div>
    </div>
    <script src="../utils/front-gallery.js"></script>
  </body>
</html>
